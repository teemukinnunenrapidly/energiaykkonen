# E1 Calculator Cache - Local Development Friendly
# Generated: 2025-09-12T07:24:01.317Z

# Basic MIME Types
AddType application/javascript .js
AddType text/css .css
AddType application/json .json

# Allow all files in this directory
<Files "*">
  Order allow,deny
  Allow from all
</Files>

# Basic security - block PHP execution
<Files "*.php">
  Order deny,allow
  Deny from all
</Files>

# Optional: Add security headers if mod_headers is available
<IfModule mod_headers.c>
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
</IfModule>

# Optional: Add caching if mod_expires is available
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType application/javascript "access plus 7 days"
  ExpiresByType text/css "access plus 7 days"
  ExpiresByType application/json "access plus 1 hour"
</IfModule>
